/* pages/search/search.wxss */
.head {
  color: white ;
  font-size: 14px;
  text-align: center;
  background-color: #B22222;
}
.search-icon{
  width: 20px;
  height: 20px;
  margin: 0 10px;
}
.search{
  background-color: #B22222;
  padding: 10px 20px;
  box-shadow: 0 3px 10px #ccc;
  margin-bottom: 10px;
}
.search-inner{
  display: flex;
  width: 100%;
  height: 30px;
  line-height: 30px;
  align-items: center;
  background-color: #fff;
  border-radius: 20px;
}
.search-inner input{
  width: calc(100vw - 60px);
  font-size: 14px;
  color: #333;
}
.container {
  padding: 0;
}
.page-body {
  width: 100%;
}

.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 300rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 300rpx;
}
.content-list {
  padding: 10px;
}
.list-box {
  padding: 10px;
}
.list-image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}
.border {
  margin: 5px 0; 
  font-size: 12px;
  border-radius: 4px;
  border: 1px solid #ccc
}
.list-red {
  color: red;
}
.list-green {
  color: green;
}
.text-right {
  padding-right: 10px;
  line-height: 40px;
  text-align: right;
}