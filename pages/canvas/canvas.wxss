/* pages/canvas/canvas.wxss */
.container {
  padding: 0;
}
.page-body {
  width: 100%;
}
.canvas {
  width: 100%;
  height: 400px;
}
.head {
  color: white ;
  font-size: 14px;
  line-height: 30px;
  text-align: center;
  background-color: #B22222;
}
.text-center {
  position: relative;
  margin: 10px 0;
  font-size: 12px;
  text-align: center;
  color: #cccc;
}
.text-center-select {
  margin-top: 20px;
  text-align: center;
}
.bottom-line{
  background: #B22222;
  height: 4rpx;
  width:30%;
  position: absolute;
  bottom: -5px;
  transition: all .5s linear;
 }
 .canvas-box {
  height: 200px;
  width:200%;
  position: absolute;
  top: 0;
  transition: all .3s linear;
 }
 .list-box {
  width:200%;
  position: absolute;
  top: 0;
  transition: all .3s linear;
 }
 .list-item {
  width: 50%;
  display: inline-block;
 }
 .positon-r {
   position: relative;
   border-bottom: 4px solid #ccc;
 }
 .press-line {
    background: #B22222;
    height: 4px;
    left: 0;
    position: absolute;
    bottom: -4px;
 }
 .list-image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}
 .canvas {
   width: 50%;
   height:200px;
   display: inline-block;
 }
 .red {
   color: #B22222;
 }
